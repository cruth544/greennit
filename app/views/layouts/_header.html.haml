%header.navbar.navbar-fixed-top
  %div.container
    %nav
      %ul.nav.navbar-nav.navbar-left
        = link_to("Home", root_path)
        = "|"
        = link_to("All", posts_all_path)
        = "|"
        - if current_user
          %li.dropdown
            = link_to("Subgreens", subgreens_path, class: "dropdown-toggle", "data-toggle" => "dropdown")
            %b.caret
            - if current_user.subgreens.length > 0
              %ul.dropdown-menu
                - current_user.subgreens.each do |sub|
                  %li
                    = link_to(sub.name, subgreen_path(sub))
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li
            = image_tag(current_user.profile_pic, width: "auto", height: "50px")
          %li
            = link_to(current_user.username, user_path(current_user))
        - else
          %li
            = link_to("Log in", new_session_path)
%br
