%header.navbar.navbar-fixed-top.navbar-inverse
  %div.container
    %nav
      %ul.nav.navbar-nav.navbar-left
        %li.greenit-logo
          = link_to("Greenit", root_path)
        %li
          = link_to("All", posts_all_path)
        / SUBGREENIT DROPDOWN
        - if current_user
          %li.dropdown
            - if current_user.subgreens.length > 0
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Subgreenits
                %b.caret
              %ul.dropdown-menu
                %li
                  = link_to("Browse Subgreenits", subgreens_path)
                - current_user.subgreens.each do |sub|
                  %li
                    = link_to(sub.name, subgreen_path(sub))
            - else
              %a.dropdown-toggle{:href => subgreens_path}
                Subgreenits
      %ul.nav.navbar-nav.navbar-right
        - if current_user
          %li
            = image_tag(current_user.profile_pic, width: "auto", height: "50px")
          %li
            = link_to(current_user.username, user_path(current_user))
        - else
          %li#nav-bar-log-in-link
            = link_to("Log in", "#")
%br
