%h1 New Session

- unless current_user
  %div
    = form_for @user, url: create_session_path do |f|
      %div
        = f.label :email
        = f.email_field :email
      %div
        = f.label :password
        = f.password_field :password

      = f.submit "Log in"
      %div
        = link_to("Not a User?", new_user_path)
- else
  %div
    You are logged in as #{current_user.username}
  %div
    =link_to("Log out?", destroy_session_path)
