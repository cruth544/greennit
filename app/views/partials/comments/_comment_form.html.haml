= form_for @comment do |f|
  %div.form-group.comment-form
    = f.text_area :body, rows: "4", placeholder: "Comment", class: "form-control"
    = f.hidden_field :comment_id, :value => params[:format]
    - if params[:controller] == "posts"
      = f.hidden_field :post_id, value: @post.id
  = f.submit class: "submit-form-button comment-submit-button"
